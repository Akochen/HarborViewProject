@using WebApplication3.HelperClasses;
@model IEnumerator< List<WebApplication3.HelperClasses.Section>>
@{
    Layout = null;
    ViewBag.Title = "Search Sections";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <div>
        <form>
            <label id="input">Search: </label>
            <input type="text" name="input" />
            <input type="submit" value="Search" />
        </form>
    </div>
    @{
        if (IsPost)
        {
            List<Section> sections = WebApplication3.Models.StudentDbConnectionClass.searchSections("instructor", Request["input"]);
            <table>
                @foreach(var section )
                {
                    <tr>
                        <td>@section.</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
                }
            </table>
        }
    }
</body>
</html>
