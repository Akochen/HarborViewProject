@using WebApplication3.HelperClasses;
@model List<Major>
@{
    /**/

    ViewBag.Title = "Degree Audit";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}
@if (Model.Count > 0)
{
    <link rel="stylesheet" href="~/Content/searchTable.css" />
    <table class="searchTable">
        <tr>
            <td>
                <form method="post">
                    <select name="majorSelector">
                        @foreach (var v in Model)
                        {
                            <option value="@v.majorID">@v.name</option>
                        }
                    </select>
                    <input type="submit" value="GO" />
                </form>
            </td>
        </tr>
    </table>
}
else
{
    <strong>Student does not exist.</strong>
}

@{
    if (IsPost)
    {
        @Html.Action("ViewDegreeAudit", "Student", new { majorID = Request.Form["majorSelector"], studentID = Session["UserID"] });
    }
}