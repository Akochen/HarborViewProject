@model List<WebApplication3.HelperClasses.Advisor>
@{
    ViewBag.Title = "My Advisors";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}

@if (Model.Count > 0)
{
    <head>
        <link rel="stylesheet" href="~/Content/TableTemplate.css" />
    </head>
    <body>
        <table class="resultsTable">
            <tr class="tableheader">
                <th>Name</th>
                <th>Department</th>
                <th>E-Mail</th>
            </tr>
            @foreach (var v in Model)
            {
                <tr>
                    <td>@v.name</td>
                    <td>@v.department</td>
                    <td>@v.email</td>
                </tr>
            }
        </table>
    </body>

}
else
{
    <strong>You have no holds.</strong>
}