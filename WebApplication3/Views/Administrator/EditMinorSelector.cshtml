
@using WebApplication3.HelperClasses;
@model List<Minor>


@{
    ViewBag.Title = "EditMinorSelector";
    Layout = "~/Views/Shared/_LayoutAdministrator.cshtml";
}

<link rel="stylesheet" href="~/Content/Background.css" />

<form name="editCourse" method="post">
    <div>
        <table>
            <tr>
                <td><strong>Minor:</strong> </td>
                <td>
                    <select id="minorSelector" name="minorSelector" required>
                        <option value="">---Select---</option>
                        @foreach (var m in Model)
                        {
                            <option value="@m.name">@m.name</option>
                        }
                    </select>
                </td>
                <td>
                    <input type="submit" id="submit" value="Submit" />
                </td>
            </tr>
        </table>
    </div>
</form>

@{
    if (IsPost)
    {
        String majorID = Request.Form["minorSelector"];
        //Major major = new Major(majorID);
        Response.Redirect(Url.Action("EditMinor", "Administrator", new { minorID = Request.Form["minorSelector"] }));
    }
}







