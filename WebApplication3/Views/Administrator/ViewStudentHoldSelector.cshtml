@{
    ViewBag.Title = "ViewStudentHoldSelector";
    Layout = "~/Views/Shared/_LayoutAdministrator.cshtml";
}

<link rel="stylesheet" href="~/Content/searchTable.css" />
<form method="post">
    <strong><big>Enter a student ID:</big></strong>
    <table style="margin-top:5px;" class="searchTable">
        <tr>
            <td>
                <input type="number" pattern="[0-9]" name="id_box" placeholder="Student ID" required />
                <input type="submit" value="GO" />
            </td>
        </tr>
    </table>

    @{
        if (IsPost)
        {
            TempData["studentID"] = Request["id_box"];
            @Html.Action("ViewStudentHold", "Administrator", new { studentID = Request["id_box"] });
    }
    }
</form>

