@using WebApplication3.HelperClasses;
@model List<Major>
@{
    ViewBag.Title = "Degree Audit";
    Layout = "~/Views/Shared/_LayoutAdministrator.cshtml";
}
<link rel="stylesheet" href="~/Content/searchTable.css" />
<table class="searchTable">
    <tr>
        <td>
            <form method="post">
                <select name="majorSelector">
                    @foreach (var v in Model)
                    {
                        <option value="@v.majorID">@v.name</option>
                    }
                </select>
                <input type="submit" value="GO" />
            </form>
        </td>
    </tr>
</table>

@{
    if (IsPost)
    {
        @Html.Action("ViewDegreeAudit", "Administrator", new { majorID = Request.Form["majorSelector"], studentID = TempData["studentID"] });
    }
}
