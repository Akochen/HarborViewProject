@{
    ViewBag.Title = "Update Information";
    Layout = "~/Views/Shared/_LayoutAdministrator.cshtml";
}

<link rel="stylesheet" href="~/Content/searchTable.css" />
<form method="post">
    <strong><big>Enter a student ID:</big></strong>
    <table style="margin-top:5px;" class="searchTable">
        <tr>
            <td>
                <input type="text" name="id_box" placeholder="Student ID" />
                <input type="submit" value="GO" />
            </td>
        </tr>
    </table>

    @{
        if (IsPost)
        {
            Session["userIDforUpdate"] = Request["id_box"];
            @Html.Action("ViewStudentInformation", "Administrator", new { userID = Request["id_box"] });
        }
    }
</form>
