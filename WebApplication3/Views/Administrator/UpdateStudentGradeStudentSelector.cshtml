
@{
    ViewBag.Title = "Update A Grade";
    Layout = "~/Views/Shared/_LayoutAdministrator.cshtml";
}
<link rel="stylesheet" href="~/Content/searchTable.css" />
<form method="post">
    <table style="margin-top:5px;" class="searchTable">
        <tr>
            <td>
                <input type="number" name="id_box" placeholder="Student ID" required pattern="[0-9]" />
                <input type="submit" value="GO" />
            </td>
        </tr>
    </table>

    @{
        if (IsPost)
        {
            @Html.Action("UpdateStudentGradeClassSelector", "Administrator", new { studentID = Request["id_box"] });
        }
    }
</form>
