
@{
    ViewBag.Title = "Degree Audit";
    Layout = "~/Views/Shared/_LayoutAdministrator.cshtml";
}
<link rel="stylesheet" href="~/Content/searchTable.css" />
<table class="searchTable">
    <tr>
        <td>
            <form method="post">
                <input type="number" pattern="[0-9]" required name="studentID" placeholder="Student ID" />
                <input type="submit" value="GO" />
            </form>
        </td>
    </tr>
</table>

@{
    if (IsPost)
    {
        TempData["studentID"] = Request["studentID"];
        Response.Redirect(Url.Action("ViewDegreeAuditSelector", "Administrator", new { majorID = Request.Form["majorSelector"], studentID = Request["studentID"] }));
    }
}
