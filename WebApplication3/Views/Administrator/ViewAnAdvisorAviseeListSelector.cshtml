@model List<WebApplication3.HelperClasses.Advisor>
@{
    ViewBag.Title = "ViewAnAdvisorAviseeListSelector";
    Layout = "~/Views/Shared/_LayoutAdministrator.cshtml";
}

<link rel="stylesheet" href="~/Content/searchTable.css" />
<form method="post">
    <strong><big>Enter Student ID:</big></strong>
    <table style="margin-top:5px;" class="searchTable">
        <tr>
            <td>
                <select name="id_selector">
                    @foreach(var v in Model)
                    {
                        <option value="@v.name">@v.id</option>
                    }
                </select>
                <input type="submit" value="GO" />
            </td>
        </tr>
    </table>

    @{
        if (IsPost)
        {
            @Html.Action("ViewAnAdvisorAviseeList", "Administrator", new { userID = Request.Form["id_selector"] });
        }
    }
</form>

