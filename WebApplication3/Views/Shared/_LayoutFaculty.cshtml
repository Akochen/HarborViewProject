<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - Harbor View University</title>
</head>
    <body>
        <link rel="stylesheet" href="~/Content/DropDownMenu.css" />
        <div class="container">
            <header>
                <img src="~/Content/HVU Logo.png" alt="HVU Logo">
                <hr />
                <ul>
                    <li>
                        @Html.ActionLink("Home", "FacultyHome", "Faculty")
                    </li>

                    <li class="dropdown">
                        <a href="javascript:void(0)">Faculty Academics</a>

                        <div class="dropdown-content">
                            <div class="dropdown-content">
                                @if (Session["userID"] != null)
                                {
                                    if (Session["Advisor"].ToString().Equals("1"))
                                    {
                                        @Html.ActionLink("Advisee List", "ViewAdviseeList", "Faculty", new { userID = Session["UserID"].ToString() }, null)
                                    }
                                    @Html.ActionLink("Semester History", "ViewSemesterHistorySelector", "Faculty")
                                    @Html.ActionLink("Search All Sections", "SearchMasterScheduleSelector", "Faculty")
                                }

                            </div>
                        </div>
                    </li>
                    <li class="dropdown">
                        <a href="javascript:void(0)" class="dropbtn">Student Academics</a>
                        <div class="dropdown-content">
                            @if (Session["userID"] != null)
                            {
                                @Html.ActionLink("View Student Transcript", "ViewTranscriptSelector", "Faculty")
                                @Html.ActionLink("View Student Hold", "ViewStudentHoldSelector", "Faculty")
                                @Html.ActionLink("View Student Schedule", "ViewStudentScheduleSelector", "Faculty")
                                @Html.ActionLink("View Student Degree Audit", "DegreeAuditStudentSelector", "Faculty")
                            }
                        </div>
                    </li>
                    <li class="active">
                        @Html.ActionLink("Log Out", "Index", "Home")
                    </li>
                </ul>
            </header>
        </div>
        <div>
            @RenderBody()
            <hr />
            <footer>
                <p>&copy;Harbor View University</p>
            </footer>
        </div>

    </body>
</html>
