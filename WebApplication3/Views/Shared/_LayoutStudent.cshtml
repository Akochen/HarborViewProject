<!DOCTYPE html>
@using WebApplication3.HelperClasses
<html>
<head>
    <title>@ViewBag.Title - Harbor View University</title>
</head>
<body>
    <link rel="stylesheet" href="~/Content/DropDownMenu.css" />
    <div class="container">
        <header>
            <img src="~/Content/HVU Logo.png" alt="HVU Logo">
            <hr />
            <ul>
                <li>
                @Html.ActionLink("Home", "StudentHome", "Student")
                </li>
                <li class="dropdown">
                    <a href="javascript:void(0)">Registration</a>
                    <div class="dropdown-content">
                        @Html.ActionLink("Search Sections", "SearchSection", "Student")
                        @Html.ActionLink("Drop Class", "RemoveEnrollmentOptions", "Student")
                        @Html.ActionLink("Drop Class2", "RemoveEnrollmentSelector", "Student")
                        @Html.ActionLink("Register", "RegisterForClassesSelector", "Student")
                    </div>
                </li>   
                <li class="dropdown">
                    <a href="javascript:void(0)" class="dropbtn">Academics</a>
                    <div class="dropdown-content">
                        @if (Session["userID"] != null)
                        {
                            @Html.ActionLink("View Transcript", "ViewSchedule", "Student", new { userID = Session["UserID"].ToString() }, null)
                            @Html.ActionLink("View Schedule History", "ViewSchedule", "Student")
                            @Html.ActionLink("View Holds", "ViewHolds", "Student", new { userID = Session["UserID"].ToString() }, null)
                            @Html.ActionLink("View Advisors", "ViewAdvisor", "Student", new { userID = Session["UserID"].ToString() }, null)
                        }
                    </div>
                </li>
                <li><a href=#audit>Degree Audit</a></li>
                <li class="active">
                    @Html.ActionLink("Log Out", "Index", "Home")
                </li>
            </ul>
        </header>
    </div>

    <div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy;Harbor View University</p>
        </footer>
    </div>

</body>
</html>