@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<body>
    <div>
        <form method="post">
            <label id="email_label">Email: </label>
            <input type="text" id="email_field" name="email" />
            </br>
            <label id="password_label">Password: </label>
            <input type="text" id="password_field" />
            <br />
            <input type="submit" id="submit" value="submit" onclick="loginFunction()" />
            <div id="test_div"></div>
        </form>
    </div>
    <div name="catalog_link">
        @Html.ActionLink("Course Catalog", "OpenCatalog", "Home")
    </div>
</body>
@{
    if (IsPost)
    {
        String result = WebApplication3.Models.UserDbConnectionClass.login("select case [type_id] When 1 then 'Student' When 2 then 'Faculty' When 3 then 'Admin' When 4 then 'Researcher' End from[user] where[email] = '" + Request["email"] + "' and [password]= ''");
        if (result == "Student")
        {
            Response.Redirect(Url.Action("Index", "Student")); //(method name, controller name)

        }
        else
        {
            @Html.Raw("<text>Error: username or password incorrect!</text>")
        }
    }
}