@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<body>
    <div>
        <form method="post">
            <label id="email_label">Email: </label>
            <input type="text" id="email_field" name="email" />
            </br>
            <label id="password_label">Password: </label>
            <input type="text" id="password_field" />
            <br />
            <input type="submit" id="submit" value="submit" onclick="loginFunction()" />
            <div id="test_div"></div>
        </form>
    </div>
</body>
@{
    if (IsPost)
    {
        <Text>
        @WebApplication3.Models.UserDbConnectionClass.login("select case [type_id] When 1 then 'Student' When 2 then 'Faculty' When 3 then 'Admin' When 4 then 'Researcher' End from[user] where[email] = '" + Request["email"] + "' and [password]= ''")
        </Text>
    }
}