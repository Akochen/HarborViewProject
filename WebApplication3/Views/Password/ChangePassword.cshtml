
@{
    ViewBag.Title = "Log In";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
<link rel="stylesheet" href="~/Content/Background.css" />
<div>
    <form method="post">
          <table>
              <tr>
                  <td align="right"> <label id="email">E-Mail Address: </label> </td>
                  <td> <input type="text" id="email" name="email" required /> </td>
              </tr>
              <tr>
                  <td align="right"> <label id="id">User ID: </label> </td>
                  <td> <input type="number" pattern="[0-9]" id="user_id" name="user_id" required /> </td>
              </tr>
              <tr>
                  <td align="right"> <label id="password">New Password: </label> </td>
                  <td> <input type="text" id="password" name="password" required /> </td>
              </tr>
              <tr>
                  <td></td>
                  <td align="right">
                      <input type="submit" value="Submit"/>
                  </td>
              </tr>
          </table>
    </form>
</div>
<div>
    @{
        if (IsPost)
        {
            var resultString = Html.Action("ActivateChangePassword", "Password", new { email = Request["email"], id = Request["user_id"], password = Request["password"] });
            @Html.Raw(resultString)
        }
    }
</div>

